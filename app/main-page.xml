<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" navigatingFrom="navigatingFrom" class="bg-black" actionBarHidden="true">
    <GridLayout rows="*" columns="*" class="bg-black">
        <StackLayout id="textContainer" row="0" verticalAlignment="center" horizontalAlignment="center" width="100%" height="100%" class="bg-black">
            <Label text="{{ weekday }}" 
                   class="text-center" 
                   fontSize="{{ fontSize * 1.2 }}"
                   fontFamily="{{ fontFamily }}"
                   color="{{ textColor }}"
                   fontWeight="900"
                   textWrap="true"
                   translateX="{{ textShiftX }}"
                   translateY="{{ textShiftY }}"/>
            <Label text="{{ fullDate }}" 
                   class="text-center" 
                   fontSize="{{ fontSize }}"
                   fontFamily="{{ fontFamily }}"
                   color="{{ textColor }}"
                   fontWeight="900"
                   textWrap="true"
                   translateX="{{ textShiftX }}"
                   translateY="{{ textShiftY }}"/>
        </StackLayout>
    </GridLayout>
</Page>