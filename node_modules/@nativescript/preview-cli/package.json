{
  "name": "@nativescript/preview-cli",
  "version": "1.0.14",
  "license": "MIT",
  "bin": "dist/index.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.map",
    "nativescript.webpack.js",
    "open-native-modulemap.js"
  ],
  "scripts": {
    "build": "esbuild --bundle --format=cjs  --target=node12 --platform=node --external:@nativescript/webpack --external:source-map-support --outdir=dist ./src/index.ts",
    "build.plugin": "esbuild --bundle --format=cjs  --target=node12 --platform=node --outdir=dist ./src/NativeScriptPreviewWebpackPlugin.ts",
    "build.loader": "esbuild --bundle --format=cjs  --target=node12 --platform=node --outdir=dist ./src/application-path-fix-loader.ts",
    "build.postinstall": "esbuild --format=cjs  --target=node12 --platform=node --outdir=dist ./src/postinstall.ts",
    "dev": "yarn build --watch --define:DEBUG=true --sourcemap",
    "dev.plugin": "yarn build.plugin --watch --sourcemap",
    "prepack": "yarn build --define:DEBUG=false && yarn build.plugin && yarn build.loader && yarn build.postinstall && cd ../preview-cli-frontend && yarn build"
  },
  "dependencies": {
    "fetch-blob": "^3.1.5",
    "formdata-polyfill": "^4.0.10",
    "webpackbar": "5.0.2"
  },
  "devDependencies": {
    "@nativescript/preview-cli-frontend": "1.0.0",
    "@nativescript/preview-protocol": "1.0.0",
    "@nativescript/webpack": "~5.0.22",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/pako": "^2.0.0",
    "@types/qrcode-terminal": "^0.12.0",
    "@types/ws": "^8.5.5",
    "@vue/reactivity": "^3.3.4",
    "@webcontainer/env": "^1.1.0",
    "ansi-colors": "^4.1.3",
    "esbuild": "^0.18.4",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "memfs": "^3.5.3",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.1",
    "pako": "^2.1.0",
    "qrcode-terminal": "^0.12.0",
    "source-map-support": "^0.5.21",
    "typescript": "~5.5.0",
    "ulid": "^2.3.0",
    "ws": "^8.13.0"
  }
}
